@page "/fetchdata"
@inject HttpClient Http
@inject SurfBoardApp.Blazor.Client.Service.OpenWeatherAPIService WeatherAPIService

<PageTitle>Weather forecast</PageTitle>

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (forecast == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Temp. (F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in forecast.list)
            {
                <tr>
                    <td>@item.dt_text</td>
                    <td>@Math.Round(item.main.temp - 273.15, 2)</td>
                    <td>@Math.Round(((item.main.temp - 273.15) * 9 / 5) + 32, 2)</td>
                    <td>@item.weather[0].description</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private SurfBoardApp.Data.OpenWeatherAPIModels.WeatherForecast? forecast;

    protected override async Task OnInitializedAsync()
    {
        forecast = await WeatherAPIService.GetWeatherForecast("YourCityName");
    }
}
